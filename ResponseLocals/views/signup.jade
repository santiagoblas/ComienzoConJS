extends ./layout.jade

block contenido
    div(class="col-sm-6 offset-sm-3 big-top-space")
        form(action="/users", method="POST" class="form-horizontal form-bordered")
            div(class="form-group")
                label(for="username" class="control-label") Usuario
                input(type="text" id="username" name="username" placeholder="Usuario" class="form-control")
            div(class="form-group")
                label(for="email" class="control-label") Email
                input(type="text" id="email" name="email" placeholder="E-mail" class="form-control")
            div(class="form-group")
                label(for="password" class="control-label") Password
                input(type="password" id="password" name="password"  class="form-control")
            div(class="form-group")
                label(for="password_confirmation" class="control-label") Confirmar Password
                input(type="password" id="password_confirmation" name="password_confirmation"  class="form-control")
            div(class="form-group form-actions row")
                div(class="col-sm-12 col-md-6")
                    input(type="submit" class="btn btn-primary" value="Registrarse")
                div(class="col-sm-12 col-md-6 text-right")
                    a(href="/login") Ya tengo una cuenta
